<h1>
    Departments
</h1>
<style>
    th, td, table{
        border: 2px solid pink;
    }
</style>

<div id="tableDiv" style="margin-top: 40px">
    <table border="1">
        <tr>
        <th>DID</th>
        <th>Name</th>
        <th>Location</th>
        <th>Budget</th>
        <th>Delete</th>
        <th></th>
        </tr>
        <% departments.forEach((dept) => { %> 
        <tr>
        <td><%= dept.did %></td>
        <td><%= dept.dname %></td>
        <td><%= dept.lid %></td>
        <td><%= dept.budget %></td>
        <td><a href="/department/delete/<%= dept.did %>"><p type="submit">Delete</p></a></td>

        </tr>
        <% }) %>
        </table>
</div>

<br>
